[Unit]
Description=Pool Server Service
After=network.target

[Service]
WorkingDirectory=/home/ubuntu/pinning-service
ExecStart=/home/ubuntu/pinning-service/ipfs-pinning
Restart=on-failure
RestartSec=30
User=root
EnvironmentFile=/home/ubuntu/pinning-service/.env
StartLimitBurst=3
StartLimitIntervalSec=0

[Install]
WantedBy=multi-user.target