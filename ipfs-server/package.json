{
  "name": "ipfs-gateway",
  "bin": "server.js",
  "scripts": {
    "build": "esbuild server.js --bundle --platform=node --format=cjs --target=node18 --outfile=dist/bundle.cjs && copyfiles -f ../firebase.json dist && pkg ./dist/bundle.cjs --target node18-linux-x64 -o ./dist/ipfs-gateway --public --no-bytecode",
    "start": "copyfiles -f ../firebase.json ./ && node server.js"
  },
  "pkg": {
    "assets": [
      "../firebase.json",
      "node_modules/kubo-rpc-client/**/*",
      "node_modules/file-type/**/*"
    ],
    "targets": [
      "node18-linux-x64"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "express": "^4.21.0",
    "file-type": "^19.5.0",
    "firebase-admin": "^12.5.0",
    "kubo-rpc-client": "^5.0.1",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-syntax-import-attributes": "^7.25.6",
    "@babel/preset-env": "^7.25.4",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^9.2.1",
    "buffer": "^6.0.3",
    "copyfiles": "^2.4.1",
    "crypto-browserify": "^3.12.0",
    "esbuild": "^0.24.0",
    "json-loader": "^0.5.7",
    "stream-browserify": "^3.0.0",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  }
}
